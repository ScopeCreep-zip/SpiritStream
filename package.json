{
  "name": "magillastream",
  "version": "2.0.0",
  "description": "MagillaStream - Multi-Destination Streaming Application",
  "type": "module",
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "vite build",
    "vite:preview": "vite preview",
    "dev": "tauri dev",
    "build": "tauri build",
    "typecheck": "tsc -p tsconfig.frontend.json --noEmit",
    "electron:clean": "node scripts/clean.js",
    "electron:compile": "npx tsc -p tsconfig.json",
    "electron:pack": "electron-builder",
    "electron:build": "npm run electron:clean && npm run electron:compile && npm run electron:pack && npm run copy-resources",
    "electron:start": "electron dist/electron/main.js",
    "copy-resources": "node scripts/copyResources.js"
  },
  "build": {
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ],
    "files": [
      "dist/electron/**/*",
      "config/**/*",
      "src/frontend/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "sign": false,
      "forceCodeSigning": false,
      "certificateFile": "E:/magillastream/magillastream-cert.pfx",
      "certificatePassword": "test123"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/billboyles/magillastream.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/billboyles/magillastream/issues"
  },
  "homepage": "https://github.com/billboyles/magillastream#readme",
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2.9.6",
    "@types/cacheable-request": "^6.0.3",
    "@types/estree": "^1.0.6",
    "@types/http-cache-semantics": "^4.0.4",
    "@types/keyv": "^3.1.4",
    "@types/node": "^22.13.9",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/responselike": "^1.0.3",
    "@types/yauzl": "^2.10.3",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.3.0",
    "electron-builder": "^24.6.0",
    "puppeteer": "^24.34.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.9"
  }
}
