{
  "name": "magillastream",
  "version": "1.0.0",
  "description": "MagillaStream",
  "main": "dist/electron/main.js",
  "scripts": {
    "clean": "node scripts/clean.js",
    "compile": "npx tsc",
    "pack": "electron-builder",
    "build": "npm run clean && npm run compile && npm run pack",
    "electron": "electron dist/electron/main.js",
    "copy-resources": "node scripts/copyResources.js",
    "dev:server": "tsc && node scripts/copyResources.js && npm run electron",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"cross-env NODE_ENV=development npm run dev:server\" \"npm run dev:frontend\""
  },
  "build": {
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "config",
        "to": "config",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "sign": false,
      "forceCodeSigning": false,
      "certificateFile": "E:/magillastream/magillastream-cert.pfx",
      "certificatePassword": "test123"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/billboyles/magillastream.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/billboyles/magillastream/issues"
  },
  "homepage": "https://github.com/billboyles/magillastream#readme",
  "devDependencies": {
    "@types/cacheable-request": "^6.0.3",
    "@types/estree": "^1.0.6",
    "@types/http-cache-semantics": "^4.0.4",
    "@types/keyv": "^3.1.4",
    "@types/node": "^22.13.9",
    "@types/responselike": "^1.0.3",
    "@types/yauzl": "^2.10.3",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.3.0",
    "electron-builder": "^24.6.0",
    "typescript": "^5.8.2"
  }
}
