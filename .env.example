# Frontend
VITE_BACKEND_MODE=http
VITE_BACKEND_URL=http://127.0.0.1:8008
VITE_BACKEND_WS_URL=ws://127.0.0.1:8008/ws
# Note: Authentication now uses HttpOnly cookies - no token needed in frontend

# Backend server
SPIRITSTREAM_HOST=127.0.0.1
SPIRITSTREAM_PORT=8008
SPIRITSTREAM_DATA_DIR=./data
SPIRITSTREAM_LOG_DIR=./data/logs
SPIRITSTREAM_THEMES_DIR=./themes
SPIRITSTREAM_UI_DIR=./dist
SPIRITSTREAM_UI_ENABLED=0

# OAuth credentials (optional overrides for embedded placeholders)
SPIRITSTREAM_TWITCH_CLIENT_ID=
SPIRITSTREAM_TWITCH_CLIENT_SECRET=
SPIRITSTREAM_YOUTUBE_CLIENT_ID=
# Google Desktop apps require client_secret even with PKCE
SPIRITSTREAM_YOUTUBE_CLIENT_SECRET=

# Security settings
# API token for authentication (leave empty to disable auth)
SPIRITSTREAM_API_TOKEN=

# CORS allowed origins (comma-separated, supports wildcard ports with :*)
# Examples:
#   http://localhost:5173                    - specific origin
#   http://localhost:*,http://127.0.0.1:*    - wildcard ports (default)
#   https://app.example.com                  - production domain
SPIRITSTREAM_CORS_ORIGINS=http://localhost:*,http://127.0.0.1:*

# Rate limiting (requests per minute, default: 100)
SPIRITSTREAM_RATE_LIMIT=100

# Launcher
SPIRITSTREAM_UI_URL=http://127.0.0.1:8008
SPIRITSTREAM_SERVER_PATH=
SPIRITSTREAM_LAUNCHER_HIDE_WINDOW=0
SPIRITSTREAM_LAUNCHER_OPEN_EXTERNAL=0
